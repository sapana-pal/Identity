@model AppUser
@{
	ViewData["Title"] = "View USER";
}

<h1 class="bg-info text-white">View User</h1>
@*<a id="btnBack" value="Back"  asp-action="Index" class="btn btn-secondary">Back</a>
*@
@if (User.Identity.IsAuthenticated)  
{  
    @if (User.IsInRole("User"))  
	{
		@if ((bool)ViewData["HasPermissionOfViewUser"])
		{
			 @*<a asp-area="" asp-controller="Home" asp-action="Index">Back</a> *@
			<a id="btnBack" name="Command" onclick= 'history.go(-1)' value="Back" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
		}
	}  
	else
	{
		<a id="btnBack" name="Command" onclick= "history.go(-1);return false" value="Back"  asp-action="Index" class="btn btn-secondary">Back</a>
	}
 }
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="View" method="post">
	<div class="form-group">
		<label asp-for="Id"></label>
		<input asp-for="Id" class="form-control" disabled />
	</div>
	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control" disabled />
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input name="password" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>